<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/area_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty"
        android:text="@string/menu"
        android:textSize="@dimen/twenty"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/twenty"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        android:background="@color/darkGreen"
        style="@android:style/TextAppearance.DeviceDefault.Large"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sncu_nicu_dataentry"
        android:textColor="@color/white"
        android:paddingTop="@dimen/fifteen"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/deo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deo_name"
        android:textColor="@color/white"
        android:paddingTop="@dimen/onesixty"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Large"/>

    <TextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/state"
        android:textColor="@color/white"
        android:paddingTop="@dimen/fifteen"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/district"
        android:textColor="@color/white"
        android:paddingTop="@dimen/ten"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/facility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/facility"
        android:textColor="@color/white"
        android:paddingTop="@dimen/ten"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/white"
        android:layout_margin="@dimen/twentyfive"/>
    <TextView
        android:id="@+id/sncu_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync"
        android:textColor="@color/white"
        android:paddingTop="@dimen/five"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
    <TextView
        android:id="@+id/sncu_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:paddingTop="@dimen/five"
        android:paddingLeft="@dimen/twentyfive"
        android:paddingRight="@dimen/twentyfive"
        style="@android:style/TextAppearance.DeviceDefault.Medium"/>

</LinearLayout>
